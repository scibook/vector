{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["es2020", "dom"],
        "rootDir": "./src",
        "outDir": "./dist",

        // Strictness Settings
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "esModuleInterop": true,

        // Outputs
        "sourceMap": true,
        "declaration": true,
        "noEmit": true, // We are using Parcel
        "isolatedModules": true // Parcel causes isolation inherently, this will give us warnings
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        ".git",
        "node_modules",
        ".parcel-cache",
        "docs",
        "dist",
        "coverage"
    ]
}
